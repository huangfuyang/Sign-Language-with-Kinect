        </Canvas>
        <WrapPanel Grid.Column="0" Grid.Row="1" Visibility="Collapsed">
            <TextBox Text="{Binding DominantHandPointLeft}" TextChanged="TextBox_TextChanged" />
            <TextBox Text="{Binding DominantHandPointTop}" TextChanged="TextBox_TextChanged_1" />
            <TextBox Text="{Binding DotSize}" TextChanged="TextBox_TextChanged_2" />
        </WrapPanel>
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ProgressBar Grid.Row="0" Value="{Binding NumOfFeatureCompleted}" Maximum="{Binding NumOfFeature}" Foreground="#7F01D328" BorderBrush="{x:Null}" Background="{x:Null}" Margin="5"/>
            <Label Grid.Row="2" FontSize="32" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  Background="#7FFFFFFF">
                <Label.Content>
                    <AccessText TextWrapping="Wrap" Text="{Binding CurrectWaitingState}"/>
                </Label.Content>
            </Label>
            <k:KinectCircleButton Name="KBtn_Play" Grid.Row="1" Content="Play" Click="KBtn_Play_Click"></k:KinectCircleButton>
            <Label Grid.Row="3" FontSize="32" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#7FFFFFFF">
                <Label.Content>
                    <AccessText TextWrapping="Wrap" Text="{Binding SignState}"/>
                </Label.Content>
            </Label>

        </Grid>
        <DataGrid Name="FeatureDataGrid" Grid.Column="1" Grid.Row="1" AutoGenerateColumns="False" ItemsSource="{Binding FeatureList}" x:FieldModifier="public" Visibility="Collapsed">
            <DataGrid.Columns>
                <DataGridTextColumn Width="200" Binding="{Binding FeatureName}"/>
                <DataGridTextColumn Width="1*" Binding="{Binding Value}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
